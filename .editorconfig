# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = tab
indent_size = 4

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files (used in GitHub Actions if added later)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# INI files (manifest.ini, config files)
[*.ini]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2
